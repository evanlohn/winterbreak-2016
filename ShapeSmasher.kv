#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import Label kivy.uix.label.Label
#: import ListItemButton kivy.uix.listview.ListItemButton

<SettingsScreen>:
    BoxLayout:
        id:main_layout
        size_hint_x: None
        size_hint_y: None
        orientation: 'vertical'
        size: [0.5*self.parent.size[0],0.7*self.parent.size[1]]
        pos: [self.parent.size[0]/3 - self.size[0]/2, self.parent.size[1]/2 - self.size[1]/2]
        canvas:
            Color:
                rgba: 1,0,0,1
            Rectangle:
                pos: self.pos
                size:self.size
        BoxLayout:
            Label:
                text:'Sound?'
            CheckBox:
                canvas:
                    Color:
                        rgba: 0,0,1,0.25
                    Rectangle:
                        size: self.size
                        pos: self.pos
                id:sound_box
                on_active: root.play_or_stop()
        Button:
            id: back_btn
            text: "Back to home"

<DemoScreen>:
    #Rules for DemoScreen
    canvas:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: [self.pos[i] +100*(i+1) for i in [0,1]] # so you see how positioning works
            size: self.size
    BoxLayout:
        size_hint_x: None  #IMPORTANT
        size_hint_y: None  #IMPORTANT
        size: [300,200]
        anchor:
        pos: self.parent.size[0]/2,self.parent.size[1]/2 #important
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,0,0,1
            Rectangle:
                pos: self.pos
                size:self.size
        Button:
            id: but_1
            on_press: root.better(but_1)
        Button:
            id: but_2
            on_press: root.better(but_2)


<LeaderboardScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        
        BoxLayout:
            height: "50dp"
            size_hint_y: None
            Label:
                rgba: 0,0,0,1
                font_size: 25
                text: "Leaderboard Screen" 

        BoxLayout:
            spacing: 0
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Main Menu"
                size_hint_x: 15
            Button:
                text: "New Game"
                size_hint_x: 15

        ListView:
            id: high_scores
            adapter:
                ListAdapter(data=["test"], cls=ListItemButton)
        
        
